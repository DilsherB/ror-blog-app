<%= render "layouts/header"%>

<h1>Post "<%= @post.title%>"</h1>
<div class="flex">
  <div class="borderb">
    <img src=<%= @user.photo %> width=100 height=90>
  </div>
  <div class="borderb flex height110">
    <p><%= @post.author.name%></p>
    <p>Number of Posts: <%= @post.author.posts_counter%></p>
  </div>
</div>
<div class="borderb fit">
  <div class="flex">
    <%= @post.title%>
    <span class="right">Comments: <%= @post.comments_counter || 0 %> Likes: <%= @post.likes_counter || 0%> </span>
  </div></br>
  <span><%= @post.text%></span>
</div>
  <div class="border fit">
<% @post.comments.each do |comment| %>
    <span><%= comment.author.name %>: <%= comment.text %>
    </span></br>
<% end %>
  </div>

<%= render "layouts/footer" %>
