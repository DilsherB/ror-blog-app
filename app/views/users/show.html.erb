<%= render "layouts/header"%>

<h1>Detail of <%= @user.name%>'s posts</h1>
<div class="flex">
  <div class="borderb">
    <img src=<%= @user.photo %> width=100 height=90>
  </div>
  <div class="borderb flex height110">
    <p class="size"><%= @user.name%></p>
    <p>Number of Posts: <%= @user.posts_counter%></p>
  </div>
</div>
<div class="borderb"><p>Bio: </br></br><%= @user.bio%></p></div>
<% @posts.each do |post| %>
  <div class="borderb fit">
    <p><%= post.title%></p></br>
    <span><%= post.text%></span>
    <p class="right">Comments: <%= post.comments_counter || 0 %> Likes: <%= post.likes_counter || 0%> </p>
  </div>
<% end %>
<div class="margintop20">
  <%= link_to "See all posts", "#{@user.id}/posts", class: "button" %>
   <%= link_to "Create New Post", "#{@user.id}/posts/new", class: "see-link" %>
</div>

<%= render "layouts/footer" %>
